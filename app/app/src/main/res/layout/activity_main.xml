<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sime.demoweather.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="#f4d7f9">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/digCity"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Txt_Query"/>
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:id="@+id/Btn_Search"
            android:layout_gravity="center_horizontal"/>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/Img_Weather"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >
            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="@string/weather"
                android:gravity="right"
                android:textStyle="bold" />
            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:id="@+id/Lbl_Weather"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="@string/current"
                    android:gravity="right"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:id="@+id/Lbl_Current"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal" >
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:text="@string/min"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:id="@+id/Lbl_Min"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal" >
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="@string/max"
                    android:gravity="right"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:id="@+id/Lbl_Max"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/go"
                android:id="@+id/Btn_Go"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
